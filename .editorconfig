root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,css,js,jsx,ts,tsx,json}]
indent_size = 2

[*.fsproj]
indent_size = 2

[src/**/*.{fs,fsx}]
indent_size = 2
max_line_length = 120
fsharp_space_before_uppercase_invocation = true
fsharp_space_before_member = true
fsharp_space_around_delimiter = false
fsharp_max_infix_operator_expression = 60
fsharp_max_record_width = 40
fsharp_max_record_number_of_items = 3
fsharp_record_multiline_formatter = number_of_items
fsharp_max_array_or_list_width = 40
fsharp_max_dot_get_expression_width = 60
fsharp_multi_line_lambda_closing_newline = true
fsharp_multiline_bracket_style = stroustrup
fsharp_keep_max_number_of_blank_lines = 1
fsharp_experimental_elmish = true
fsharp_blank_lines_around_nested_multiline_expressions = false